<!-- res/drawable/custom_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#3498db" /> <!-- Background color in normal state -->
            <corners android:radius="4dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2980b9" /> <!-- Background color in pressed state -->
            <corners android:radius="4dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>
</selector>